<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<% if @trainer == current_trainer %>
	<%= button_to "Create Pokemon", new_pokemon_path, :class => "button medium", :method => :get %>
<% end %>


<h3> Pokemon </h3>
<% @pokemon.each do |p| %>
	<% if p.health > 0 %>
		<h4> <%= p.name %> </h4>
		<p> Level <%= p.level %> </p>
		<p> Health: <%= p.health %> </p>
		<%= button_to "Damage!", damage_path(id: p.id), :class => "button medium", :method => :patch %>
	<% end %>
<% end %>


<h3> Pokemon Center </h3>
<% if @heal_pkmn.empty? %>
	<p> Your Pokemon are all at full health! </p>
<% else %>
	<% @heal_pkmn.each do |p| %>
		<h4> <%= p.name %> </h4>
		<p> Health: <%= p.health %> </p>
		<%= button_to "Heal this Pokemon", heal_path(id: p.id), :class => "button medium", :method => :patch %>
	<% end %>
<% end %>